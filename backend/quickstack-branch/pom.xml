        </dependency>
        <dependency>
            <groupId>com.quickstack</groupId>
            <artifactId>quickstack-tenant</artifactId>
        </dependency>

        <!-- JPA -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-jpa</artifactId>
        </dependency>

